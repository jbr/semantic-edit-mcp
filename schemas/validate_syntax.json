{
    "type": "object",
    "properties": {
        "file_path": {
            "type": "string",
            "description": "Path to file to validate"
        },
        "content": {
            "type": "string",
            "description": "Code content to validate (optional if file_path provided)"
        },
        "language": {
            "type": "string",
            "description": "Programming language (required if validating content instead of file)",
            "enum": ["rust", "json", "markdown"],
            "default": "rust"
        }
    },
    "additionalProperties": false
}
