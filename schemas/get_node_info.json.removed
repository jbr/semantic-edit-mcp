{
    "type": "object",
    "properties": {
        "file_path": {
            "type": "string",
            "description": "Path to the source file. Supports Rust (.rs), JSON (.json), Markdown (.md), and other languages."
        },
        "selector": {
            "type": "object",
            "description": "Text-anchored node selector using exact text and AST navigation. Note: For exploration purposes, you can also use line/column positioning.",
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "anchor_text": {
                            "type": "string",
                            "description": "Exact text to find in the source code as an anchor point"
                        },
                        "ancestor_node_type": {
                            "type": "string",
                            "description": "AST node type to walk up to from the anchor point"
                        }
                    },
                    "required": ["anchor_text", "ancestor_node_type"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "line": {
                            "type": "number",
                            "description": "Line number (1-indexed) - useful for exploration and node discovery",
                            "minimum": 1
                        },
                        "column": {
                            "type": "number", 
                            "description": "Column number (1-indexed) - useful for exploration and node discovery",
                            "minimum": 1
                        },
                        "scope": {
                            "type": "string",
                            "description": "Optional scope hint for position-based selection",
                            "enum": ["token", "expression", "statement", "item"]
                        }
                    },
                    "required": ["line", "column"],
                    "additionalProperties": false
                }
            ]
        },
        "language": {
            "type": "string",
            "description": "Optional language hint. If not provided, language will be detected from file extension.",
            "enum": ["rust", "json", "toml", "markdown", "typescript", "javascript", "python"]
        }
    },
    "required": ["file_path", "selector"],
    "additionalProperties": false
}
